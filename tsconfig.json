{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["src/services/*"],
      "@types/*": ["src/types/*"],
      "@types": ["src/types"],
      "@hooks/*": ["src/hooks/*"],
      "@styles/*": ["src/styles/*"],
      "@constants/*": ["src/constants/*"],
      "@lib/*": ["src/lib/*"],
      "@assets/*": ["assets/*"]
    }
  }
}
