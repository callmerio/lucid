// @flow

/**
 * Advanced syllable splitting function
 * @param {string} word - The word to split into syllables
 * @returns {string[]} Array of syllables
 */
export function advancedSyllabify(word: string): Array<string>;

/**
 * Get syllable count for a word
 * @param {string} word - The word to count syllables for
 * @returns {number} Number of syllables
 */
export function getSyllableCount(word: string): number;

/**
 * Batch process multiple words for syllable splitting
 * @param {string[]} words - Array of words to process
 * @returns {Object.<string, string[]>} Object mapping words to their syllable arrays
 */
export function batchSyllabify(words: Array<string>): { [string]: Array<string> };
